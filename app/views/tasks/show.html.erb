<h1><%= @task.title  %></h1>

<p><%= @task.created_at %></p>

<hr>

<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for [@task, @comment] do |f| %>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <%= f.submit %>
<% end %>

<hr>
<h2>Comments</h2>
<% @task.comments.each do |comment| %>
  <p><%= comment.body %></p>
  <hr>
<% end %>
